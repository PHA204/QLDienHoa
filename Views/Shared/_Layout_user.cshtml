                },
                error: function (xhr, status, error) {
                    // Xử lý lỗi (nếu có)
                }
            });
        }



        function calculateTotal() {
            var total = 0;
            var stotal = 0;
            $('tbody tr').each(function () {
                var soluong = parseFloat($(this).find('.qty').val());
                var gia = parseFloat($(this).find('.price-l').text().replace('đ', '').replace(',', '')); // Lấy giá từ text, loại bỏ ký tự "đ" và dấu phẩy
                if (!isNaN(soluong) && !isNaN(gia)) {
                    var tien = soluong * gia;
                    total += tien;
                    stotal += total;
                    var formattedTien = numeral(tien).format('0,0') + "đ";
                    $(this).find('.price-total').text(formattedTien); // Cập nhật giá trị tiền vào ô tiền tương ứng
                    $(this).find('.price-t').text(formattedTien);
                }
            });

            var formattedTotal = numeral(total).format('0,0') + "đ";
            $('.total-price').text(formattedTotal); // Hiển thị tổng tiền
            $('.price-t').text(formattedTotal);
            UpdateSP(); // Gọi hàm sendTotalPrice() sau khi tính toán tổng tiền
        }

