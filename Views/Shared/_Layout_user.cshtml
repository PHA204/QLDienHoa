        function UpdateSP() {
            var cartItems = [];
            $('tbody tr').each(function () {
                var id = $(this).find('.id').val();
                var tquality = $(this).find('.qty').val();
                if (tquality != '') {
                    var quality = parseInt(tquality);
                    cartItems.push({ id: id, SL: quality });
                }
            });
            $.ajax({
                url: '/ShoppingCart/Update',
                type: 'POST',
                contentType: 'application/json', // Thiết lập kiểu dữ liệu gửi đi là JSON
                data: JSON.stringify(cartItems),
                success: function (rs) {
