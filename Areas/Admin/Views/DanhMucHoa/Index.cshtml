@model IEnumerable<QLDienHoa03.Models.DM_Hoa>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}
<div class="container-fluid flex-grow-1 container-p-y">
    <h4 class="font-weight-bold py-3 mb-0">Phiếu Đặt Hàng</h4>
    <div class="text-muted small mt-0 mb-4 d-block breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#"><i class="feather icon-home"></i></a></li>
            <li class="breadcrumb-item"><a href="#!">Transation</a></li>
            <li class="breadcrumb-item active"><a href="#!">Phiếu Đặt</a></li>
        </ol>
    </div>
    <div class="row">
        <!-- customar project  start -->
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <div class="row align-items-center m-l-0">
                        <div class="col-sm-6 text-left">
                            <button class="btn btn-success btn-sm mb-3 btn-round" Onclick="Create()" data-target="#add-product"><i class="feather icon-plus"></i> Product</button>
                        </div>
                        <div class="col-6">
                            <div id="report-table_filter" class="dataTables_filter" style="display:flex;margin-left:50%;">
                                <label>Search:</label><input type="search" id="myInput" class="form-control form-control-sm ml-2" placeholder="" aria-controls="report-table">
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table id="report-table" class="table mb-0">
                            <thead class="thead-light">
                                <tr>
                                    <th></th>
                                    <th>Tên Sản Phẩm</th>
                                    <th>Màu Sắc</th>
                                    <th>Giá Bán</th>
                                    <th>Action</th>

                                </tr>
                            </thead>
                            <tbody id="myTable">
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="align-middle">
                                            <img src="~/Image/img/@item.HinhAnh" alt="contact-img" title="contact-img" class="rounded mr-3" height="48" />
                                            @if (item.DanhGia == 4)
                                            {
                                                <p class="m-0 d-inline-block align-middle font-16">
                                                    <br />
                                                    <span class="text-warning feather icon-star-on"></span>
                                                    <span class="text-warning feather icon-star-on"></span>
                                                    <span class="text-warning feather icon-star-on"></span>
                                                    <span class="text-warning feather icon-star-on"></span>
                                                    <span class="text-warning feather icon-star"></span>
                                                </p>
                                            }
                                            @if (item.DanhGia == 5)
                                            {
                                                <p class="m-0 d-inline-block align-middle font-16">
                                                    <br />
                                                    <span class="text-warning feather icon-star-on"></span>
                                                    <span class="text-warning feather icon-star-on"></span>
                                                    <span class="text-warning feather icon-star-on"></span>
                                                    <span class="text-warning feather icon-star-on"></span>
                                                    <span class="text-warning feather icon-star-on"></span>
                                                </p>
                                            }

                                        </td>
                                        <td class="align-middle">
                                            @Html.DisplayFor(modelItem => item.TenHoa)
                                        </td>
                                        <td class="align-middle">
                                            @Html.DisplayFor(modelItem => item.MauSac)
                                        </td>
                                        <td class="align-middle">
                                            @Html.DisplayFor(modelItem => item.Gia)
                                        </td>
                                        <td class="table-action">
                                            <a href="#!" class="btn btn-icon btn-outline-primary"><i class="feather icon-eye"></i></a>
                                            <a href="@Url.Action("Edit","PhieuDat",new { id=item.MaHoa})" class="btn btn-icon btn-outline-success"><i class="feather icon-edit"></i></a>
                                            <a href="#" class="btn btn-icon btn-outline-success" id="showModal" onclick="Confirm('@item.MaHoa')"><i class="feather icon-trash-2"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <input type="hidden" id="ProductId" />
                    </div>
                </div>
            </div>
        </div>
        <!-- customar project  end -->
    </div>
</div>

