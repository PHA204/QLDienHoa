@model QLDienHoa03.Models.PhieuDat

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
    List<SelectListItem> items = new List<SelectListItem>
{
    new SelectListItem { Text = "Đã giao", Value = "1" },
    new SelectListItem { Text = "Chưa giao", Value = "0" },
    // Thêm các mục khác nếu cần
};

    ViewBag.DaGiao = new SelectList(items, "Value", "Text");
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<script src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
<link href="~/assets/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<style>

    .input-group {
        display: flex;
        justify-content: space-between;
    }

    .search-bar {
        display: flex;
        padding: 10px;
    }
</style>
<h2>Phiếu Đặt Hàng</h2>

<div class="input-group">
    <p>
        <a href="#" class="btn btn-primary" Onclick="Create()" data-target="#add-product"> create new</a>
    </p>
    <div class="search-bar">
        <div class="form-outline" data-mdb-input-init>
            <input style="height:100%;" id="myInput" class="form-control" type="search" placeholder="Search..">
        </div>
        <button id="search-button" type="button" class="btn btn-primary">
            <i class="fa fa-search"></i>
        </button>
    </div>
</div>

<div class="modal fade" id="add-product">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title"> Thêm mới </h2>
            </div>
            <div class="modal-body ">
                <form id="createForm">
                    <label> Mã Sản Phẩm </label>
                    @Html.TextBoxFor(model => model.SoPhieu, new { @class = "form-control" })
                    <label> Mã Sản Phẩm </label>
                    @Html.DropDownListFor(model => model.Hoa, (SelectList)ViewBag.Hoa, "Select Type", new { @class = "form-control" })
                    <label> Mã Sản Phẩm </label>
                    @Html.TextBoxFor(model => model.TenNguoiGui, new { @class = "form-control" })
                    <label> Mã Sản Phẩm </label>
                    @Html.TextBoxFor(model => model.TenNguoiNhan, new { @class = "form-control" })
                    <label> Mã Sản Phẩm </label>
                    @Html.TextBoxFor(model => model.DiaChiNguoiNhan, new { @class = "form-control" })
                    <label> Mã Sản Phẩm </label>
                    @Html.DropDownListFor(model => model.KhuVuc, (SelectList)ViewBag.KhuVuc, "Select Type", new { @class = "form-control" })
                    <label> Mã Sản Phẩm </label>
                    @Html.TextBoxFor(model => model.GioGiao, new { @class = "form-control" })
                    <label> Mã Sản Phẩm </label>
                    @Html.DropDownListFor(model => model.DaGiao, (SelectList)ViewBag.DaGiao, "Select Type", new { @class = "form-control" })
                </form>
            </div>
            <div class="modal-footer">
                <div class="">
                    <a href="#" id="btnSave" class="btn btn-primary">Lưu</a>
                    <a href="#" class="btn btn-danger btnCancel">Close</a>
                </div>
            </div>
        </div>
    </div>
</div>

@*modal xóa*@
<div class="modal fade" id="deleteproduct">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title"> create </h2>
            </div>
            <div class="modal-body">
                <h3>Are you sure about that ?</h3>
            </div>
            <div class="modal-footer">
                <div class="">
                    <a href="#" id="btnDelete" class="btn btn-primary"> Xóa</a>
                    <a href="#" class="btn btn-danger btnCancel">Close</a>
                </div>
            </div>
        </div>
    </div>
</div>

<table class="table">
    <tr>
        <th>
            Tên Người Gửi
        </th>
        <th>
            Tên Người Nhận
        </th>
        <th>
            Địa Chỉ Người Nhận
        </th>
        <th>
            Ngày Giao
        </th>
        <th>
            Giờ Giao
        </th>
        <th>
            Đã Giao
        </th>
        <th>
            Tên Hoa
        </th>
        <th>
            Tên Khu Vực
        </th>
        <th></th>
    </tr>
    <tbody id="myTable">
        @foreach (var item in ViewBag.phieuDat)
        {
            <tr>
                <td>
                    @item.TenNguoiGui
                </td>
                <td>
                    @item.TenNguoiNhan
                </td>
                <td>
                    @item.DiaChiNguoiNhan
                </td>
                <td>
                    @item.NgayGiao

                </td>
                <td>
                    @item.GioGiao
                </td>
                <td>
                    @item.DaGiao
                </td>
                <td>
                    @item.Hoa
                </td>
                <td>
                    @item.KhuVuc
                </td>
                <td>
                    <a href="#" id="showModal" class="btn btn-danger" onclick="Confirm('@item.SoPhieu')">Delete</a> |
                    <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#edit-product-@item.SoPhieu"> edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<input type="hidden" id="ProductId" />

<script src="~/Scripts/popup.js"></script>
<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });




    $(document).ready(function () {
        $("#btnSave").click(function () {
            var productFormData = $("#createForm").serialize();

            $.ajax({
                type: "POST",
                url: "/PhieuDat/SaveProduct",
                data: productFormData,
                success: function () {
                    window.location.href = "/Admin/PhieuDat/Index";
                }
            });
            $("#add-product").modal('hide');
        });

        $(".btnCancel").click(function () {
            window.location.href = "/Admin/PhieuDat/Index";
        });


        $("#btnDelete").click(function () {
            var _id = $("#ProductId").val();
            $.ajax({
                type: "POST",
                url: "/PhieuDat/Delete",
                data: { id: _id },
                success: function (result) {
                    if (result) {
                        $("#deleteproduct").modal('hide');
                        $("#ProductId").val(null);
                        window.location.href = "/Admin/PhieuDat/Index";
                    } else {
                        alert("Thất bại");
                    }
                }
            });
        });
    });

    var Confirm = function (id) {
        $("#ProductId").val(id);
        $("#deleteproduct").modal('show');
    }
    var Create = function () {
        $("#add-product").modal('show');
    }
    $(document).ready(function () {
        // Xử lý sự kiện khi nhấn vào nút "Edit"
        $("body").on("click", ".edit-product", function () {
            var productId = $(this).data("product-id");
            $.ajax({
                type: "GET",
                url: "/Product/EditProduct?id=" + productId,
                success: function (response) {
                    // Nạp PartialView vào modal
                    $("#edit-product-modal .modal-content").html(response);
                    // Hiển thị modal
                    $("#edit-product-modal").modal("show");
                }
            });
        });
    });


</script>