@model IEnumerable<QLDienHoa03.Models.TaiKhoan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}


<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<div class="container-fluid flex-grow-1 container-p-y">
    <h4 class="font-weight-bold py-3 mb-0">Danh Sách Khách Hàng</h4>
    <div class="text-muted small mt-0 mb-4 d-block breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#"><i class="feather icon-home"></i></a></li>
            <li class="breadcrumb-item"><a href="#!">Account</a></li>
            <li class="breadcrumb-item active"><a href="#!">Khách Hàng</a></li>
        </ol>
    </div>
    <div class="row">
        <!-- customar project  start -->
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <div class="row align-items-center m-l-0">
                        <div class="col-sm-6 text-left">
                            <button class="btn btn-success btn-sm mb-3 btn-round" Onclick="Create()" data-target="#add-product"><i class="feather icon-plus"></i> Product</button>
                        </div>
                        <div class="col-6">
                            <div id="report-table_filter" class="dataTables_filter" style="display:flex;margin-left:50%;">
                                <label>Search:</label><input type="search" id="myInput" class="form-control form-control-sm ml-2" placeholder="" aria-controls="report-table">
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table id="report-table" class="table mb-0 datatables-demo">
                            <thead class="thead-light">
                                <tr>
                                    <th>Tên Khách Hàng</th>
                                    <th>Sdt</th>
                                    <th>Địa Chỉ</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody id="myTable">
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="align-middle">
                                            @Html.DisplayFor(modelItem => item.HoTen)
                                        </td>
                                        <td class="align-middle">
                                            @Html.DisplayFor(modelItem => item.SĐT)
                                        </td>
                                        <td class="align-middle">
                                            @Html.DisplayFor(modelItem => item.DiaChi)
                                        </td>
                                        <td class="table-action">
                                            <a href="#!" class="btn btn-icon btn-outline-primary"><i class="feather icon-eye"></i></a>
                                            <a href="@Url.Action("Edit","TaiKhoans",new { id=item.TenTK})" class="btn btn-icon btn-outline-success"><i class="feather icon-edit"></i></a>
                                            <a href="#" class="btn btn-icon btn-outline-success" id="showModal" onclick="Confirm('@item.TenTK')"><i class="feather icon-trash-2"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <input type="hidden" id="ProductId" />
                    </div>
                </div>
            </div>
        </div>
        <!-- customar project  end -->
    </div>
</div>




<style>
    #report-table_filter {
        display: none;
    }
</style>

<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>

